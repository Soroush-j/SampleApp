<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/movie_nav_graph"
            app:startDestination="@+id/nav_movies_fragment">

    <fragment
            android:id="@+id/nav_movies_fragment"
            android:name="com.sjavaherian.movie.main.MoviesFragment"
            android:label="Movies"
            tools:layout="@layout/movies_fragment">
        <action
                android:id="@+id/action_movies_to_movie_details"
                app:destination="@+id/nav_movie_details_fragment"
        />
        <action
                android:id="@+id/action_movies_to_search"
                app:destination="@id/nav_search_movies_fragment"/>
    </fragment>

    <fragment
            android:id="@+id/nav_movie_details_fragment"
            android:name="com.sjavaherian.movie.details.MovieDetailsFragment"
            android:label="Details"
            tools:layout="@layout/movie_details_fragment">
        <argument
                android:name="id"
                app:argType="integer"
                app:nullable="false"/>
    </fragment>

    <fragment
            android:id="@+id/nav_search_movies_fragment"
            android:name="com.sjavaherian.movie.search.SearchMovieFragment"
            android:label="SearchFragment"
            tools:layout="@layout/search_movies_fragment">
        <action
                android:id="@+id/action_search_to_movie_details"
                app:destination="@id/nav_movie_details_fragment"/>
    </fragment>

</navigation>